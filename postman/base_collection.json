{
    "info": {
        "_postman_id": "itsrama-portfolio-backend-base",
        "name": "Itsrama Portfolio Backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Base collection for Itsrama Portfolio Backend API",
        "_version": "1.0.0"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{BEARER_TOKEN}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "BASE_URL",
            "value": "http://localhost:8080/api/v1",
            "type": "string"
        },
        {
            "key": "Bearer Token",
            "value": "",
            "type": "string"
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Global pre-request script"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Global test script",
                    "pm.test(\"Response status code is 2xx\", function () {",
                    "    pm.response.to.be.success;",
                    "});"
                ]
            }
        }
    ],
    "item": [
        {
            "name": "Base",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{BASE_URL}}/",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        ""
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{BASE_URL}}/health",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        }
    ]
}